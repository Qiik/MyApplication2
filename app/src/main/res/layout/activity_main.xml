<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.qiik.project.myapplication.MyFirstActivity">

    <CheckBox
        android:text="CheckBox"
        android:layout_width="101dp"
        android:layout_height="38dp"
        android:id="@+id/checkBox1"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="23dp" />

    <TextView
        android:text="TextView"
        android:layout_width="253dp"
        android:layout_height="64dp"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:id="@+id/checkBox2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/checkBox1"
        android:layout_marginLeft="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <RadioButton
        android:text="RadioButton"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:id="@+id/radioButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/checkBox2"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Button"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        android:layout_marginLeft="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox1" />

</android.support.constraint.ConstraintLayout>
